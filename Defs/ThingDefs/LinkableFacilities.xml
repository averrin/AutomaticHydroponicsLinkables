<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Fertilizer Injector: powered, short range, small boost, components heavier -->
  <ThingDef ParentName="BuildingBase">
    <defName>AutoHydro_FertilizerInjector</defName>
    <label>fertilizer injector</label>
    <description>Links to automatic hydroponics to inject fertilizer, modestly accelerating processing speed.</description>
    <graphicData>
      <texPath>FertilizerInjector</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <thingClass>Building</thingClass>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Beauty>0</Beauty>
      <WorkToBuild>900</WorkToBuild>
      <Mass>45</Mass>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Facility">
        <compClass>CompFacility</compClass>
        <linkableBuildings>
          <li>AutoHydroponic</li>
          <li>SmallAutoHydroponic</li>
          <li>TinyAutoHydroponic</li>
        </linkableBuildings>
        <maxSimultaneous>2</maxSimultaneous>
        <mustBePlacedAdjacent>true</mustBePlacedAdjacent>
      </li>
    </comps>
    <modExtensions>
      <li Class="AutomaticHydroponicsLinkables.FacilitySpeedBoostExtension">
        <tickFactorPerLink>0.15</tickFactorPerLink>
        <maxLinks>2</maxLinks>
      </li>
    </modExtensions>
    <researchPrerequisites>
      <li>AutoHydro_LinkedEnhancements</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>60</pathCost>
  </ThingDef>

